# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/jobbot

# Email
EMAIL_MODE=dev  # dev = console logging, prod = actual SMTP

# Auth
SECRET_KEY=your-secret-key-change-this-in-production
MAGIC_LINK_TTL_MINUTES=30

# CORS - Production domains (comma-separated, leave empty for local dev)
# Example: ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
ALLOWED_ORIGINS=

# Frontend URL (for magic links) - Optional: defaults to first ALLOWED_ORIGINS or localhost
# FRONTEND_URL=https://app.yourdomain.com
FRONTEND_URL=

# App
DEBUG=true
